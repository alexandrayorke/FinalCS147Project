<body>
	<div class="container">
		<h1 id="welcome">Create New Account</h1>
		<p id="createInstructions"></p>

		<!-- Create form to create an account -->
		<form id="createAccountForm" role="form" method="get" action="/addUser" onsubmit="return createAccountListener()">
			<div class="form-group">
				<p> Email <input type = "text" id="email" name="email" class="form-control submissionField" placeholder="ex: name@mailprovider.com"/></p>
			</div>
			<div class="form-group">
				<p> ABC Account Password <input type = "password" id="password" name="password" class="form-control submissionField" placeholder="ex: mypassword"/></p>
			</div>
			<div class="form-group">
				<p> First Name <input type = "text" id="firstName" name="firstName" class="form-control submissionField" placeholder="ex: John"/></p>
			</div>
			<div class="form-group">
				<p> Last Name <input type = "text" id="lastName" name="lastName"class="form-control submissionField" placeholder="ex: Smith"/></p>
			</div>
			<div class="form-group">
				<p> Street Address <input type = "text" id="streetAddress" name="streetAddress" class="form-control submissionField" placeholder="ex: 000 Street Name"/></p>
			</div>
				<p> Zip-code <input type = "text" id="zipCode" name="zipCode" class="form-control submissionField" placeholder="ex: 00000"/></p>
			</div>
			<input type ="submit" id="loginBtn" class="btn btn-default" value = "Create Account"></input>
		</form> 

	</div>


