<html>

<head>
	<!-- Bootstrap -->
	<link href="css/bootstrap.css" rel="stylesheet">
	<link href="css/bootstrap-theme.css" rel="stylesheet">
	<link href="/css/project.css" rel="stylesheet">
	<meta name="viewport" content="initial-scale=1">
	<link href="/css/menubar.css" rel="stylesheet">
	<title> Yardsale Login </title>
</head>
<body>
	<div class="container-fluid loginpage">
		<h1 id="welcome" class="yardsaleText text-center">YardSale </h1>
		<p id="loginInstructions">{{instructions}}</p>
		<form id="loginForm" role="form" method="get" action="/login" onsubmit="return loginListener()">
			<div class="form-group">
				<input type = "text" id="email" name="email" placeholder="User email" class="form-control" value={{email}}>
			</div>
			<div class="form-group">
				<input type = "password" id="password" name="password" placeholder="Password" class="form-control"/>
			</div>
			<input type ="submit" id="loginBtn" class="btn btn-default" value = "Login"></input>
		</form> 
		<p><a href="/createaccount">Create New Account</a></p>
	</div>
	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	<script src="https://code.jquery.com/jquery.js"></script>
	<!-- Include all compiled plugins (blelow), or include individual files as needed -->
	<script src="js/bootstrap.js"></script>
	<script src="js/credentials.js"></script>

</body>
</html>