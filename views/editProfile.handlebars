<html>

<head>
	<!-- Bootstrap -->
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.css" rel="stylesheet">
	<link href="/css/project.css" rel="stylesheet">
	<link href="/css/menubar.css" rel="stylesheet">
	<link href="/css/homepage.css" rel="stylesheet">

	<title> Edit Your Profile</title>
</head>
<body class = "cbp-spmenu-push">
	<div class = "topbar">
		<div class = "row">
			<div class = "col-xs-6 col-xs-4">

				<button type="button" class = "btn btn-default menuButton" id="showLeft">
					<span class="glyphicon glyphicon-th-list icon"></span>
				</button>

			</div>
			<div class = "col-xs-6 col-xs-4">
				<p class = "text-center balanceText">Edit Account</p>
			</div>
			<div class = "col-xs-6 col-xs-4">
				<button type="button" class="btn btn-default btn-lg searchButton" id="homeBtn" onclick=" window.location = 'homepage';">
					<span class="glyphicon glyphicon-home icon"></span>
				</button>
			</div>
		</div>
	</div>
	<div class="container-fluid">
		
		<div id = "menubar" class="filters">
				<nav class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left" id="cbp-spmenu-s1">
					<p> Categories </p>
					<a href="/filteredPage/Books">Books</a>
					<a href="/filteredPage/Crafts">Crafts</a>
					<a href="/filteredPage/Electronics">Electronics</a>
					<a href="/filteredPage/Entertainment">Entertainment</a>
					<a href="/filteredPage/Fashion">Fashion</a>
					<a href="/filteredPage/Home and Garden">Home and Garden</a>
					<a href="/filteredPage/Sports and Recreational Equipment">Sports and Recreational Equipment</a>
					<a href="/filteredPage/Other Goods">Other Goods</a>
					<a href="/filteredPage/Services">Services</a>
					<p> Account </p>
					<a href="/notifications">Notifications</a>
					<a href="/sell">Sell Something</a>
					<a href="/editProfile">Edit Account</a>
					<a href="/logout">Logout</a>
				</nav>
			</div>
	<br>
		<form id="editEmailForm" role="form" method="get" action="/editProfile" >
			<div class="form-group">
				<div class="emailField">
					<p style="display:inline" id="curEmail">Email: {{user.email}}</p>
					<p style="display:inline"><input type ="submit" id="editEmailBtn" class="btn btn-default" value="Edit"></input></p>
				</div>
			</div>
		</form>

		<form id="editPasswordForm" role="form" method="get" action="/editProfile" >
			<div class="form-group">
				<div class="passwordField">
					<p style="display:inline" id="curPassword">Password: {{user.password}}</p>
					<p style="display:inline"><input type ="submit" id="editPasswordBtn" class="btn btn-default" value="Edit"></input></p>
				</div>
			</div>
		</form>

		<hr>

		<form id="editAddressForm" role="form" method="get" action="/editProfile">
			<div class="form-group">
				<div class="addressField">
					<p style="display:inline" id="curAddress">Street Address: {{user.address}}</p>
					<p style="display:inline"><input type ="submit" id="editAddrBtn" class="btn btn-default" value="Edit"></input></p>
				</div>
			</div>
		</form>

		<form id="editZipForm" role="form" method="get" action="/editProfile">
			<div class="form-group">
				<div class="zipCodeField">
					<p style="display:inline" id="curZipCode">Zip Code: {{user.zip}}</p>
					<p style="display:inline"><input type ="submit" id="editZipBtn" class="btn btn-default" value="Edit"></input></p>
				</div>
			</div>
		</form>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="https://code.jquery.com/jquery.js"></script>
<!-- Include all compiled plugins (blelow), or include individual files as needed -->
<script src="js/bootstrap.js"></script>
<script src="js/editProfileFields.js"></script>
<script src="js/menubar.js"></script>
</body>
</html>