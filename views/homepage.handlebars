<!doctype html>

<html>
<head>
	<!-- Bootstrap -->
	<link href="/css/bootstrap.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.css" rel="stylesheet">
	<link href="/css/project.css" rel="stylesheet">

</head>
<body>
	<div class="container">
		<div class="toolbar">	
			<div class ="row">
				<div class="col-md-8"><a href="/editProfile"><p id ="userName">{{user.firstName}}</p></a></div>

				<form id="sellSomethingForm" role="form" method="get" action="/sell">
					<div class="col-md-4">
						<input type ="submit" id="sellSomethingButton" class="btn btn-default" value = "Sell Something"></input>
					</div>
				</form>
				<form id="logOutForm" role="form" method="get" action="/logout">
					<div class="col-md-4">
						<input type ="submit" id="logOutBtn" class="btn btn-default" value = "Log Out"></input>
					</div>
				</form>
			</div>
			<div class="row">
				<div class="col-md-8"></div>
				<div class="col-md-4"><p id="balance">Balance: {{user.credits}}</p></div>
			</div>

			
			<nav class="navbar navbar-default navbar-static-top" role="navigation">
				<div class="container-fluid" class="visible-xs">

					<!-- Collect the nav links, forms, and other content for toggling -->
					
					<div lass="collapse navbar-collapse in" id="bs-example-navbar-collapse-1">
						<!--<div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1" class="visible-xs">-->
						<ul class="nav navbar-nav">
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Price <b class="caret" class="input-group"></b></a>
								<ul class="dropdown-menu">
									<li><a href="#">0-50</a></li>
									<li><a href="#">50-100</a></li>
									<li><a href="#">100+</a></li>
								</ul>
							</li>
						</ul>

						<ul class="nav navbar-nav">
							<li class="dropdown">
								<a href="#" class="dropdown-toggle" data-toggle="dropdown">Category <b class="caret" class="input-group"></b></a>
								<ul class="dropdown-menu">
									<li><a href="#">Books</a></li>
									<li><a href="#">Crafts</a></li>
									<li><a href="#">Electronics</a></li>
									<li><a href="#">Entertainment</a></li>
									<li><a href="#">Fashion</a></li>
									<li><a href="#">Home and Garden</a></li>
									<li><a href="#">Sports and Recreational Equipment</a></li>
									<li><a href="#">Other Goods</a></li>
									<li class="divider"></li>
									<li><a href="#">Services</a></li>
								</ul>
							</li>
						</ul>


						<form class="navbar-form navbar-left" role="search">
							<div class="form-group">
								<input type="text" class="form-control" placeholder="item name" class="input-group">
							</div>
							<button type="submit" class="btn btn-default" >Search</button>
						</form>

					</div><!-- /.navbar-collapse -->
				</div><!-- /.container-fluid -->
			</nav>
		</div>
		{{#each data.items}}
		<div class="item" id="{{id}}">
			<img src="{{image}}" class="img-thumbnail" width="500px">
			<p id="description">{{description}}</p>
			<p id="price">{{price}}</p>
			<button id="buyButton" class="btn btn-primary btn-lg">Buy</button>
		</div>
		<br>
		{{/each}}
<!-- 
		{{#each users}}
		<div class="users">
			<p>{{firstName}}</p>
			<p>{{lastName}}</p>
			</div>
			{{/each}}
		-->


	</div>
	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	<script src="https://code.jquery.com/jquery.js"></script>
	<!-- Include all compiled plugins (blelow), or include individual files as needed -->
	<script src="js/bootstrap.js"></script>
	<script src="js/buy.js"></script>

</body>
</html>